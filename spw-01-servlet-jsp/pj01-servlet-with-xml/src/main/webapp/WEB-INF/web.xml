<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="https://jakarta.ee/xml/ns/jakartaee" xsi:schemaLocation="https://jakarta.ee/xml/ns/jakartaee https://jakarta.ee/xml/ns/jakartaee/web-app_6_0.xsd" version="6.0">
  <display-name>pj01-servlet-with-xml</display-name>
  <welcome-file-list>
    <welcome-file>index.jsp</welcome-file>
  </welcome-file-list>
  
  <servlet>
  	<servlet-name>helloServlet</servlet-name>
  	<servlet-class>com.app.web.servlet.HelloServlet</servlet-class>
  	<init-param>
  		<param-name>maxFileSize</param-name>
  		<param-value>100MB</param-value>
  	</init-param>
  	<init-param>
  		<param-name>totalPage</param-name>
  		<param-value>20</param-value>
  	</init-param>
  	<load-on-startup>1</load-on-startup>
  </servlet>
  
  <servlet-mapping>
  	<servlet-name>helloServlet</servlet-name>
  	<url-pattern>/hello</url-pattern>
  </servlet-mapping>
  
  <context-param>
  	<param-name>maxWait</param-name>
  	<param-value>30s</param-value>
  </context-param>
  
  <servlet>
  	<servlet-name>headerInfo</servlet-name>
  	<servlet-class>com.app.web.servlet.HeaderInfoServlet</servlet-class>
  </servlet>
  
  <servlet-mapping>
  	<servlet-name>headerInfo</servlet-name>
  	<url-pattern>/headerInfo</url-pattern>
  </servlet-mapping>
  
</web-app>